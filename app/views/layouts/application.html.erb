<!DOCTYPE html>
<html>
  <head>
    <title>Spudify</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "email": '<%= current_user.email %>',
          "username": '<%= current_user.username %>',
          "name": '<%= current_user.name %>',
        };
      </script>
    <% end%>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
